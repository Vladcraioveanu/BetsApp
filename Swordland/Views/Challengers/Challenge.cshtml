@model IEnumerable<Swordland.Models.ChallengersViewModel>
@{
    ViewData["Title"] = "Challenge";
}

<body>

    <h2>Meet our challengers!</h2>

    <p>
        <ol>
            <li>Check out each challenger's information</li>
            <li>Pick your favourite</li>
            <li>Support him by watching his live combat matches!</li>
            <li>You can bet money on each challengers for a change to win big time!</li>
        </ol>
        <br />
    </p>
    @*<p>
        Audio controls: <audio controls autoplay>bo
            <source src="~/images/audio.mp3" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
    </p>*@
    <hr />
    <h2>Top monthly favourites</h2>
    <br />
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/top1.png" alt="top1" class="img-responsive" />
            </div>
            <div class="item">
                <img src="~/images/top2.png" alt="top2" class="img-responsive" />
            </div>
            <div class="item">
                <img src="~/images/top3.png" alt="top3" class="img-responsive" />
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <hr /><br /><br />
    
    <form>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="column3">
                <div class="card">
                    <img class="card-img-top" src="@("/images/" + item.Image)" alt="Card image" style="width:100%; text-align:center" />
                    <div class="container2">
                        <h2 class="card-title">@item.StageName</h2>
                        @*<p class="card-title">@item.Alias</p>*@
                        <p class="card-title">@item.Description</p>
                        <a asp-route-id="@item.ChallengeId" asp-controller="Challengers" asp-action="Bets" class="button3">Place bet</a>

                    </div>
                </div>
                <br /><br /><br />
            </div>
            }
        </div>
    </form>
</body>


